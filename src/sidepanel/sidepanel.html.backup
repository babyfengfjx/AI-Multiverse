                            <button class="secondary-btn-small" id="resetPromptBtn" data-i18n="reset_prompt">Reset</button>
                        </div>
                        <textarea id="summarizePromptInput" class="summarize-textarea" rows="8" data-i18n-placeholder="prompt_placeholder_custom" placeholder="Enter your custom summarization prompt..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="confirm-btn-secondary" id="summarizeSettingsCancelBtn" data-i18n="cancel">Cancel</button>
                    <button class="confirm-btn-primary" id="summarizeSettingsConfirmBtn" data-i18n="confirm">Confirm</button>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer-section">
            <div class="chat-section" id="chatSection">
                <!-- Drag and Drop Overlay -->
                <div id="dragOverlay" class="drag-overlay" style="display: none;">
                    <div class="drag-overlay-content">
                        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path>
