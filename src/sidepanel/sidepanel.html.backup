                    <div class="file-preview-list" id="filePreviewList"></div>
                    <button id="clearFilesBtn" class="clear-files-btn">√ó</button>
                </div>

                <textarea id="prompt" placeholder="Ask anything... (Enter to send)" rows="1"></textarea>
                
                <!-- Hidden file input for actual file selection -->
                <input type="file" id="fileInput" multiple style="display: none;" accept="image/*,.pdf,.txt,.doc,.docx,.md,.json,.csv">
                
                <div class="input-actions-bar">
                    <div class="left-actions">
                        <button class="action-btn-pill" id="attachFileBtn" data-i18n-title="attach_files" title="Attach Files">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path>
                            </svg>
                            <span data-i18n="attach_file">Attach</span>
                        </button>
                        <button class="action-btn-pill danger" id="closeAllBtn">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <path d="M18 6L6 18M6 6l12 12"></path>
                            </svg>
                            <span data-i18n="close">Close</span>
                        </button>
                    </div>
                    <div class="right-actions">
                        <button class="action-btn-pill" id="launchBtn">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                                <polyline points="15 3 21 3 21 9"></polyline>
                                <line x1="10" y1="14" x2="21" y2="3"></line>
                            </svg>
                            <span data-i18n="open">Open</span>
                        </button>
                        <button class="action-btn-pill" id="tileBtn">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <rect x="3" y="3" width="7" height="7"></rect>
                                <rect x="14" y="3" width="7" height="7"></rect>
                                <rect x="14" y="14" width="7" height="7"></rect>
                                <rect x="3" y="14" width="7" height="7"></rect>
                            </svg>
                            <span data-i18n="tile">Tile</span>
                        </button>
                        <button class="primary-btn-send" id="sendBtn">
                            <span data-i18n="send">Send</span>
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2.5">
                                <line x1="22" y1="2" x2="11" y2="13"></line>
                                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                            </svg>
                        </button>
                        <button class="primary-btn-summarize" id="summarizeBtn" data-i18n-title="summarize_all" title="Summarize all responses">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                            <span data-i18n="summarize">Summarize</span>
                        </button>
                        <!-- ÈóÆÈ¢òÊòæÁ§∫Âå∫Âüü -->
                        <div id="questionDisplay" class="question-display" style="display: none;">
                            <span class="question-label" data-i18n="question">ÈóÆÈ¢ò:</span>
                            <span id="questionText" class="question-text"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div id="status" class="status-bar"></div>
        </div>
    </div>
    <script src="../lib/marked.min.js"></script>
    <script src="../lib/highlight-all.min.js"></script>
    <script src="../lib/purify.min.js"></script>
    <script src="../config.js"></script>
    <script src="../i18n.js"></script>
    <script src="sidepanel.js"></script>
</body>

</html>