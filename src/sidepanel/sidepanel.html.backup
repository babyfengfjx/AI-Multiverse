                            <option value="kimi">Kimi</option>
                            <option value="deepseek">DeepSeek</option>
                            <option value="chatgpt">ChatGPT</option>
                            <option value="qwen">Qwen</option>
                            <option value="yuanbao">Yuanbao</option>
                        </select>
                    </div>
                    <div class="summarize-setting-group">
